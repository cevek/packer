{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "declaration": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "noEmitHelpers": true,
    "inlineSourceMap": true
  },
  "exclude": [
    "node_modules"
  ]
}