{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "dist",
    "declaration": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "noEmitHelpers": true,
    "inlineSourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}